<div class="col-xs-12 col-sm-7">
  <div class="content-headline-bline"></div>
  <div class="content-headline"> To be played </div>
  <% @bets.each do |match| %>
    <%= link_to user_bet_user_bets_path(match.id) do %>

    <% end %>
  <% end %>
</div> <!-- .columns -->

<div class="col-xs-12 col-sm-4 col-sm-offset-1">
  <div class="content-headline-bline"></div>
  <div class="content-headline"> Finished </div>
  <% @finished_bets.each do |match| %>
    <%= link_to user_bet_user_bets_path(match.id) do %>
       <div class="match-container">
            <div class="game-info-container">
              <p><%= match.game %></p>
              <p>BO<%= match.bestof %></p>
            </div>
            <% @starts_in_mon = match.match_starts_at.mon - DateTime.now.mon %>
            <% @starts_in_min = match.match_starts_at.min - DateTime.now.min %>
            <% @starts_in_day = match.match_starts_at.day - DateTime.now.day %>
            <% @starts_in_hour = match.match_starts_at.hour - DateTime.now.hour %>
            <% if @starts_in_hour < 0 then @starts_in_hour = @starts_in_hour.to_i*(-1) end %>

            <% if match.winner == 1 %>
              <h1>
                <span><%= match.team_one %></span>
                <div class="versus"> VS. </div>
                <span style="color: #555;"><%= match.team_two %></span>
              </h1>
            <% elsif match.winner == 2 %>
              <h1>
                <span style="color: #555;"><%= match.team_one %></span>
                <div class="versus"> VS. </div>
                <span><%= match.team_two %></span>
              </h1>
            <% end %>

          </div> <!-- .match-container -->
    <% end %>
  <% end %>
</div>
