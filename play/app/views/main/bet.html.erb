<%= form_for(@user_bet) do |f| %>
  <% if @user_bet.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user_bet.errors.count, "error") %> prohibited this user_bet from being saved:</h2>

      <ul>
      <% @user_bet.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <p> User ID = <%= @user.id %></p>
  <p> get "bet/:id/:bet_id", :to => 'main#bet', :on => :collection </p>

  <p> team_one: <%= @bet.team_one %> </p>
  <p> team_two: <%= @bet.team_two %> </p>

  <div class="field">
    <%= f.label :bet_points %><br>
    <%= f.number_field :bet_points %>
  </div>
  
  <div class="field">
    <%= f.label "Bet on" %><br>
    <select name="user_bet[bet_on_id]">
      <option value="1"><%= @bet.team_one %></option>
      <option value="2"><%= @bet.team_two %></option>
    </select>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>