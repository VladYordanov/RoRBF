<div class="container">
  <div class="row">

    <div class="head-welcome-container">
      <h1 class="welcome-headline">BettingForge</h1>
      <h2 class="welcome-subline"> Bet on your favorite teams and win prizes<br/> without investing any money! </h2>
      <% if !current_user %>
        <div class="welcome-buttons-container">
          <a href="#" id="sign-up-pop-up">
            <button onClick="$('#sign-in-element-to-pop-up').bPopup()" class="welcome-button"> Log In </button>
          </a>
          <div id="sign-up-element-to-pop-up">
            <%= render :partial => "users/registrations/new" %>
          </div>

          <a href="#" id="sign-in-pop-up">
            <button onClick="$('#sign-up-element-to-pop-up').bPopup()"class="welcome-button"> Sign Up </button>
          </a>
          <div id="sign-in-element-to-pop-up">
            <%= render :partial => "users/sessions/new" %>
          </div>

        </div>
      <% end %>
    </div>

  </div>
</div>

<% match_counter = 0 %>
<div class="starting-soon-big-container">
  <div class="container">
    <div class="row">
      <div class="starting-soon-container">
        <div class="content-headline-bline"></div>
        <div class="content-headline"> Starting soon </div>

        <div class="starting-soon-matches">
          <% @starting_soon.each do |match| %>
            <%= link_to user_bet_user_bets_path(match.id) do %>
            <% match_counter += 1 %>
            <% if match_counter % 2 != 0 %>
              <div class="col-xs-12 col-sm-8" style="float: none">
            <% elsif match_counter % 2 == 0 %>
              <div class="col-xs-12 col-sm-8 col-sm-offset-4" style="float: none">
            <% end %>
              <%= render 'show_match_big', :match => match %>
            </div> <!-- .columns -->
            <% end #link_to %>
          <% end %>
        </div>
      </div> <!-- -->
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="home-prizes-container">
        <div class="content-headline-bline"></div>
        <div class="content-headline">Last added prizes</div>

        <div class="home-prizes-showing">

          <% @prizes.each do |prize| %>
            <!-- <div class="col-xs-12 col-sm-4"> -->
            <div class="the-prize-container">
            <%= link_to (prize_path(prize.id)) do %>
              <div class="prize-container" style="background: url('<%= prize.thumbnail.url %>'); background-size: cover">
                <div class="prize-container-hover">
                  <div class="prize-info">
                    <div class="last-prize-name"><%= prize.name %></div>
                  </div>
                </div>
              </div>
            <% end %>

            <%= link_to (prize_path(prize.id)) do %>
              <button class="btn-buy-prize">
                See more
              </button>
            <% end %>
            </div>
            <!-- </div> -->
          <% end %>

        </div>

    </div>
  </div>
</div>
