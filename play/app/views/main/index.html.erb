<%= link_to "LoL Matches", lol_matches_main_index_path %>
<%= link_to "CS:GO Matches", csgo_matches_main_index_path %>
<%= link_to "Dota2 Matches", dota2_matches_main_index_path %>
<%= link_to "SC2 Matches", sc2_matches_main_index_path %>

<div class="bets">
	<div class="active">
		<% @bets.each do |bet| %>
			<% if bet.can_bet != 0 %> <!-- show matches which are to be played or are being played ATM -->
				<div class="bet_layout">
					<p> 
						<span class="team_one_chance">
							<%= bet.team_one_chance %>%
						</span>
						<span class="team_one"> 
							<%= bet.team_one %> 
						</span>
						VS. 
						<span class="team_two">
							<%= bet.team_two %> 
						</span>
						<span class="team_two_chance">
							<%= bet.team_two_chance %>%
						</span>
					</p>

					<div class="values">
					values:
						<span class="team_one_value">
							<%= bet.team_one_value %>
						</span>
						<span class="team_two_value">
							<%= bet.team_two_value %>
						</span>
					</div>

					<div class="bet_button">
						<% if current_user %>
							<%= link_to "Bet", user_bet_user_bets_path(bet.id) %>
						<% elsif current_admin %>
							<%= link_to "Finish match", finish_match_bets_path(bet.id) %>
						<% else %>
							<%= link_to "Log in to bet", new_user_session_path %>
						<% end %>
					</div>
				</div>
			<% end %>
		<% end %>
	</div>
</div>