<p id="notice"><%= notice %></p>

<h1>Listing User Bets</h1>

<table>
  <thead>
    <tr>
      <th>Bet on</th>
      <th>Bet points</th>
      <th>Bet team</th>
      <th>Won</th>
      <th>Loss</th>
      <th>Returned value</th>
      <th>Closed</th>
      <th>User</th>
      <th>Bet</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_bets.each do |user_bet| %>
      <tr>
        <td><%= user_bet.bet_on_id %></td>
        <td><%= user_bet.bet_points %></td>
        <td><%= user_bet.bet_team %></td>
        <td><%= user_bet.won %></td>
        <td><%= user_bet.loss %></td>
        <td><%= user_bet.returned_value %></td>
        <td><%= user_bet.closed %></td>
        <td><%= user_bet.user %></td>
        <td><%= user_bet.bet %></td>
        <td><%= link_to 'Show', user_bet %></td>
        <td><%= link_to 'Edit', edit_user_bet_path(user_bet) %></td>
        <td><%= link_to 'Destroy', user_bet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

