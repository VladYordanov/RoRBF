
<div class="container">
  <div class="row">

<div class="col-sm-12">
<div class="match-container" style="margin-top: 110px; margin-bottom: 110px;">
            <div class="game-info-container">
              <p><%= @bet.game %></p>
            </div>  
            <% @starts_in_mon = @bet.match_starts_at.mon - DateTime.now.mon %>
            <% @starts_in_min = @bet.match_starts_at.min - DateTime.now.min %>
            <% @starts_in_day = @bet.match_starts_at.day - DateTime.now.day %>
            <% @starts_in_hour = @bet.match_starts_at.hour - DateTime.now.hour %>
            <% if @starts_in_hour < 0 then @starts_in_hour = @starts_in_hour.to_i*(-1) end %>
            
            <h1>
              <span><%= @bet.team_one %></span> 
              VS. 
              <span><%= @bet.team_two %></span>
            </h1>
            <% if @starts_in_day >= 0 %>
              <h2> starts in <%= @starts_in_day %>d <%= @starts_in_hour %>h </h2>
            <% elsif @starts_in_min <= 0  %>
              <h2> started </h2>
            <% else %>
              <h2> starts in <%= @starts_in_hour %>h </h2>
            <% end %>
            <h3>BO<%= @bet.bestof %></h3>
          </div> <!-- .match-container -->
        </div> <!-- .columns -->

<div class="col-sm-6">
<iframe src="http://player.twitch.tv/?channel=<%=@bet.stream_link%>" frameborder="0" scrolling="no" height="378" width="98%" ></iframe><a href="http://www.twitch.tv/riotgames?tt_medium=live_embed&tt_content=text_link" style="margin-bottom: 110px; padding:2px 0px 4px; display:block; width:100%; left: 0; position: relative; font-weight:normal; font-size:10px;text-decoration:underline;"></a>
</div>

  
<div class="col-sm-6" style="margin-bottom: 110px">     
    <% if !current_user %>
      <div class="user-bet-form">
        <p class="new-ubet-notlogged"> Please log in if you want to bet on this match. </p>
      </div>
    <% else %>

      <div class="user-bet-form">

      <% if @bet.can_bet != 0 %>

        <% if @already_bet == 1 %>

          <% if @user_bet.bet_on_id == 1 %>
            <p>You have <%= @user_bet.bet_points %> points bet on <%= @bet.team_one %> </p>
          <% elsif @user_bet.bet_on_id == 2 %>
            <p>You have <%= @user_bet.bet_points %> points bet on <%= @bet.team_two %> </p>      
          <% end %>

        <% elsif !@already_bet %>

          <% if @starts_in_min <= 0 && @starts_in_day <= 0 && @starts_in_hour <= 0 %>
            <h2> The match has already started. </h2>
          <% elsif %>

            <%= render 'form' %>

          <% end %>

        <% end %>

      <% elsif @bet.can_bet == 0 %>

        <h2> Match has ended. </h2>

      <% end %>

    </div> <!-- user-bet-form -->

  <% end %> <!-- if current user -->
      <div class="match-single-info">
        <div class="match-single-info-headline"> VALUES </div>
        <div class="match-single-info-container">
          <span class="team_one_value">
            <%= @bet.team_one %> - <%= @bet.team_one_value %> for 1
          </span>
          <span class="team_two_value">
            <%= @bet.team_two %> - <%= @bet.team_two_value %> for 1
          </span>
        </div>      
     </div><!-- .mattch-single-info -->

  
</div>

<div class="col-sm-6">


</div>

</div> <!-- .bet_layout -->



  </div>
</div>
