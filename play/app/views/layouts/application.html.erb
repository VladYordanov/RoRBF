 <!DOCTYPE html>
<html>
  <head>
    <title>BettingForge</title>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
    <link href='https://fonts.googleapis.com/css?family=Montserrat:400,700' rel='stylesheet' type='text/css'>
  </head>
  <body>

    <div class="head-nav-container">
      <div class="container">
        <div class="row">
          <%= link_to (root_path) do %>
            <div class="col-xs-4 no-padding">
                <div class="logo">BettingForge</div>
            </div>
          <% end %>

          <nav id="menu" class="main-nav">
            <ul>
              <li><%= link_to "HOME", root_path %></li>
              <li><a href="#">MATCHES</a>
                <ul class="dropdown">
                  <%=link_to (all_matches_main_index_path) do %>
                      <li>CURRENT</li>
                  <% end %>
                  <%=link_to (csgo_matches_main_index_path) do %>
                      <li>CS:GO</li>
                  <% end %>
                  <%=link_to (dota2_matches_main_index_path) do %>
                      <li>DOTA 2</li>
                  <% end %>
                  <%=link_to (lol_matches_main_index_path) do %>
                      <li>LOL</li>
                  <% end %>
                  <%=link_to (sc2_matches_main_index_path) do %>
                      <li>SC2</li>
                  <% end %>
                </ul>
              </li>
              <li><%= link_to "PRIZES", prizes_main_index_path %></li>

              <% if current_user %>
                <li><%= link_to "MY PROFILE", profile_users_path %></li>
                <li><%= link_to "LOG OUT", destroy_user_session_path, :method => :delete %>
                </li>
              <% elsif current_admin %>
                <li><a href="#">ADMIN</a>
                  <ul class="dropdown">
                    <%=link_to (bets_path) do %>
                        <li>Bets</li>
                    <% end %>
                    <%=link_to (prizes_path) do %>
                        <li>Prizes</li>
                    <% end %>
                    <%=link_to (deliveries_path) do %>
                        <li>Deliveries</li>
                    <% end %>
                    <%=link_to (user_bets_path) do %>
                        <li>User Bets</li>
                    <% end %>
                    <%=link_to (users_path) do %>
                        <li>Users</li>
                    <% end %>
                  </ul>
                </li>  
                <li><%= link_to "LOG OUT", destroy_admin_session_path, :method => :delete %>
                </li>           
              <% else %>
                <li><a href="#" id="sign-up-pop-up">SIGN UP</a></li>
                <div id="sign-up-element-to-pop-up">
                  <%= render :partial => "users/registrations/new" %>
                </div>
                <li><a href="#" id="sign-in-pop-up">LOG IN</a></li>
                <div id="sign-in-element-to-pop-up">
                  <%= render :partial => "users/sessions/new" %>
                </div>
              <% end %>  

            </ul>
          </nav>
        </div> 
      </div>
    </div>

    <%= yield %>

    <footer>
      <div class="container">
        <div class="row"> 
          <div class="col-lg-4">
            <div class="footer-menu">
              <ul>
                <li><a href="#">home</a></li>
                <li><a href="#">matches</a></li>
                <li><a href="#">prizes</a></li>
                <div class="footer-sign">
                  <li><a href="#">sign up</a></li>
                  <li><a href="#">sign in</a></li>
                </div>
              </ul>
            </div>
          </div>

          <div class="col-lg-4 col-lg-offset-4"> 
            <div class="footer-menu-social">
              <a href="#"> <i class="fa fa-facebook-square"> </i> </a>
              <a href="#"> <i class="fa fa-twitter-square"> </i> </a>
              <a href="#"> <i class="fa fa-youtube-square"> </i> </a>
              <div class="footer-email">support@bettingforge.eu</div>
            </div>
          </div>

        </div>
      </div>



      <div class="footer-copyright">
        <div class="container">
          <div class="row">
            <div class="copyright-text"> BettingForge Â© 2015 </div>
          </div>
        </div>
      </div>
    </footer>


  </body>
</html>
