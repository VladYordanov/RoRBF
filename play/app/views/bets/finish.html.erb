<div class="container">
  <div class="row">

    <div class="col-lg-12">
      <div class="match-container" style="margin: 0px; margin-top: 110px;">
        <div class="game-info-container">
          <p><%= @bet.game %></p>
          <p>BO<%= @bet.bestof %></p>
        </div>
        <h1> <span><%= @bet.team_one %></span> VS. <span><%= @bet.team_two %></span> </h1>
          <div class="starting-time">
            <h2> <%= start_time(@bet.id) %> </h2>
          </div>
      </div> <!-- .match-container -->
    </div>

    <div class="col-lg-12">
      <div class="delivery-new-prize-container padding-50">
        <%= form_for(@bet) do |f| %>
          <div class="field">
            <%= f.label "Winner" %><br>
            <select name="bet[winner]">
              <option value="1"><%= @bet.team_one %></option>
              <option value="2"><%= @bet.team_two %></option>
            </select>
          </div>

          <div class="actions">
              <%= f.button :submit %>
          </div>
        <% end %>
      </div>
    </div>

  </div>
</div>
