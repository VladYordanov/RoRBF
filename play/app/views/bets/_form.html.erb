
<div class="container">
  <div class="row">
    <table>
      <thead>
        <tr>
          <th>Team one</th>
          <th>Team two</th>
          <th>Winner</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @bets.each do |bet| %>
            <tr>
              <td><%= bet.team_one %></td>
              <td><%= bet.team_two %></td>
              <td><%= bet.winner %></td>
              <td><%= link_to 'Show', bet %></td>
              <td><%= link_to 'Edit', edit_bet_path(bet) %></td>
              <td><%= link_to 'Finish', finish_match_bets_path(bet.id) %></td>
              <td><%= link_to 'Destroy', bet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr> 
        <% end %>
      </tbody>
    </table>
  </div>
</div>