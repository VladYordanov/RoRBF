<div class="container">
  <div class="row">

      <p id="notice"><%= notice %></p>

      <h1>Listing Deliveries</h1>

      <table>
        <thead>
          <tr>
            <th>User Name</th>
            <th>User ID</th>
            <th>Prize Name</th>
            <th>Prize ID</th>
            <th>Street</th>
            <th>State</th>
            <th>Country</th>
            <th>Zipcode</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @deliveries.each do |delivery| %>
            <tr>
              <td><%= User.find(delivery.user_id).username %></td>
              <td><%= delivery.user_id %></td>
              <td><%= Prize.find(delivery.prize_id).name %></td>
              <td><%= delivery.prize_id %></td>
              <td><%= delivery.street %></td>
              <td><%= delivery.state %></td>
              <td><%= delivery.country %></td>
              <td><%= delivery.zipcode %></td>
              <td><%= link_to 'Show', delivery %></td>
              <td><%= link_to 'Edit', edit_delivery_path(delivery) %></td>
              <td><%= link_to 'Destroy', delivery, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>

      <%= link_to 'New Delivery', new_delivery_path %>

  </div>
</div>
